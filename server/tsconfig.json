{
  "compilerOptions": {
    "strict": true,
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./node_modules/@types", "../node_modules/@types", "./@types"]
  },
  "include": ["**/*"],
  "ts-node": {
    "files": true
  },
  "files": ["./app.ts"]
}
